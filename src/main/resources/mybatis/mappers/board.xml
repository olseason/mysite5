<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<!-- 조회수 올리기(글읽기) -->
	<update id="updateHit" parameterType="int">
		<![CDATA[
			update board
			set hit = hit + 1
			where no = #{no}
		]]>
	
	</update>
	
</mapper>